<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:rowCount="12"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="de.drkalz.midwifesearch.Register"
            tools:showIn="@layout/activity_register">

    <TextView
        android:id="@+id/tv_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Vorname:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Nachname:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_street"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Straße:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:hint="Straße + Hausnummer"
        android:inputType="text|textPostalAddress"/>

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Stadt:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Land:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:text="Postleitzahl:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:hint="numerisch"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tv_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:text="Festnetz:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_telefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:hint="+49 ..."
        android:inputType="phone"/>

    <TextView
        android:id="@+id/tv_mobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:text="Mobil:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_mobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="7"
        android:hint="+49 .."
        android:inputType="phone"/>

    <TextView
        android:id="@+id/tv_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="8"
        android:text="Homepage:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="8"
        android:hint="http://..."/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="9"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="9"
        android:hint="Benutzername"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="10"
        android:text="Passwort:"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="10"
        android:password="true"/>

    <TextView
        android:id="@+id/tv_isMidwife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="20dp"
        android:layout_row="11"
        android:text="Hebamme?"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <Switch
        android:id="@+id/sw_isMidwife"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_row="11"
        android:checked="false"
        android:text="Nein"
        android:textSize="15sp"/>

</GridLayout>
